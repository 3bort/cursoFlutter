//03 Tipo de datos Booleanos y Condicionales

void main(){
  
  bool isActive = true;
  
  if(!isActive){
    print('Está activo');
  }else{
    print('Esta inactivo');
  }
  
}

void main(){
  
  //Null Safety
  
  bool? isActive = null; //con ? le indicamos que puede ser null
  
  if(isActive == null){
    print('isActive es null');
  }else{
    print('No es null');
  }
  
}


